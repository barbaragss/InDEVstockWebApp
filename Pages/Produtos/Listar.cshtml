@page
@model InDEVstockWebApp.Pages.Produtos.IndexModel;
@{
}
<div class="container">
    <h2 class="text-center mb-5">Lista de Produtos</h2>

    <section>
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Modelo</th>
                    <th scope="col">Cor</th>
                    <th scope="col">Tamanho</th>
                    <th scope="col">Quantidade</th>
                    <th scope="col"></th>

                </tr>
            </thead>

            <tbody>
                @foreach (var data in Model.Produtos)
                {
                    <tr>
                        <th scope="row">@Html.DisplayFor(modelItem => data.Id)</th>
                        <td>@Html.DisplayFor(modelItem => data.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => data.Modelo)</td>
                        <td> @Html.DisplayFor(modelItem => data.Cor)</td>
                        <td>  @Html.DisplayFor(modelItem => data.Tamanho)</td>
                        <td>  @Html.DisplayFor(modelItem => data.Quantidade)</td>
                        <td>
                            <a class="btn btn-info"
                               asp-page="/Produtos/Detail"
                               asp-route-id="@data.Id">
                                Detalhes
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </section>
</div>





